class Node:
    def __init__(self, data):
        self.data = data
        self.next = None
        self.prev = None

class Solution:
    def addNode(self, head, p, x):
        new_node = Node(x)
        current = head

        for _ in range(p):
            if current is None:
                return head  # Position out of bounds
            current = current.next

        if current is None:
            return head  # Position out of bounds

        new_node.next = current.next
        new_node.prev = current

        if current.next:
            current.next.prev = new_node

        current.next = new_node

        return head
